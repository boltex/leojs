{
	"rules": {
		"no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
		"triple-equals": true,
		"strict-comparisons": true,
		"strict-boolean-expressions": [
			true,
			"allow-string",
			"allow-enum",
			"allow-number",
			"allow-boolean-or-undefined"
		]
	},
	"defaultSeverity": "warning"
}